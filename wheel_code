import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.util.Range;
import java util.Arraylist;

@TeleOp(name= "Wheels", group= "basic")

public class Wheels extands OpMode{

//Define robot
RobotHardware robot = new RobotHardware();

//RUN ONCE ON INIT()
 @Override
   public void init() {
    robot.init(hardwarMap);
    telemerty.addData("STATUS, "Initialized");
}

// Loop ON init()
 @Override
  Public void init_loop() {
}

// RUN ONCE ON start ()
 @Override 
   public void start() {
}

// LOOP ON start
 @Override
   public void loop () {
      double G1rightStickY = -gamepad1.right_stick_y;
      double G1leftStickY = - gamepad1.left_stick_y;
      boolean G1rightBumper = gamepad1.right_bumper;
      boolean G1leftBumper = gamepad1.left_bumper;
}     

 if (G1rightBumper) {
    robot.motorLR.setPower(-1);
    robot.motorLF.setPower(1);
    robot.motorRR.setPower(-1);
    robot.motorRF.setPower(1);   
 }
  else if (G1leftBumper) {
     robot.motorLR.setPower(1);
     robot.motorLF.setPower(-1);
     robot.motorRR.setPower(1);
     robot.motorRF.setPower(-1); 
 }
    else{
       robot.motorLR.setPower(G1leftBumper);
       robot.motorLF.setPower(G1leftBumper);
       robot.motorRR.setPower(-G1rightBumper);
       robot.motorRF.setPower(-G1rightBumper);
}     
 
 //RUN ONCE ON stop()
  @Override
     public void stop () {
 }     
      
}      
           
